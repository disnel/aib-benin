{% extends 'backend.html.twig' %}

{% block content %}
<section class="content">
<div class="box">
<div class="box-body">
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ menu.titre }}</td>
            </tr>
            <tr>
                <th>EstActif</th>
                <td>{{ menu.estActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Masque</th>
                <td>{{ menu.masque ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ menu.route }}</td>
            </tr>
            <tr>
                <th>OrdreAffichage</th>
                <td>{{ menu.ordreAffichage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_index') }}">back to list</a>

    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
</div>
</div>
</section>
{% endblock %}
