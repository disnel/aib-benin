
{% extends 'backend.html.twig' %}

{% block stylesheet %}
    {{ parent()}}
    <link href="{{ asset('backend/bower_components/datatables.net-bs/css/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h2>Coordonnées</h2>
                        <a class="btn btn-primary" href="{{ path('app_coordonnee_new') }}">Ajout d'un co</a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                   <tr>
                                        <th>Id</th>
                                        <th>Adresse</th>
                                        <th>Telephone</th>
                                        <th>Telephone2</th>
                                        <th>Email</th>
                                        <th>Email2</th>
                                        <th>Logo</th>
                                        <th>actions</th>
                                    </tr>
                                </tr>
                            </thead>
                            <tbody>
                            {% for co in coordonnees %}
                                <tr>
                                    <td>{{ co.id }}</td>
                                    <td>{{ co.adresse }}</td>
                                    <td>{{ co.telephone }}</td>
                                    <td>{{ co.telephone2 }}</td>
                                    <td>{{ co.email }}</td>
                                    <td>{{ co.email2 }}</td>
                                    <td>{{ co.logo }}</td>
                                    <td>
                                        <div class="btn-group">
                                        <button type="button" class="btn btn-default">Action</button>
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ path('app_coordonnee_show', {'id': co.id}) }}">Détails</a></li>
                                            <li><a href="{{ path('app_coordonnee_new', {'id': co.id}) }}">Editer</a></li>
                                            <li class="divider"></li>
                                            <li><a href="{{ path('app_coordonnee_delete', {'id': co.id}) }}">Supprimer</a></li>
                                        </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script> -->
    <script src="{{ asset('backend/bower_components/datatables.net/js/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('backend/bower_components/datatables.net-bs/js/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
        'paging'      : true,
        'lengthChange': false,
        'searching'   : false,
        'ordering'    : true,
        'info'        : true,
        'autoWidth'   : false
        })
    })
    </script>
{% endblock %}

