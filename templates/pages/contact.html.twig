{% extends "template.html.twig" %}

{% block header %}
    {{ render(controller('App\\Controller\\LibrairieController::afficherHeaderForotherPage')) }}
{% endblock %}

{% block main %}
    <!-- Blog Details Page Title & Breadcrumbs -->
    <div data-aos="fade" class="page-title">
      <div class="heading">
        <div class="container">
          <div class="row d-flex">
            <div class="col-lg-8">
              <h1>{{ menu.titre }}</h1>
              <p class="mb-0">{{ menu.sousTitre }}</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="{{ path('app_homepage') }}">Accueil</a></li>
            <li class="current">{{ menu.titre }}</li>
          </ol>
        </div>
      </nav>
    </div>
    <!-- End Page Title -->

    <!-- Contact Section - Home Page -->
    <section id="contact" class="contact">

    <!--  Section Title -->
    {# <div class="container section-title" data-aos="fade-up">
        <h2>{{ menu.titre }}</h2>
        <p>{{ menu.description }}</p>
    </div> #}
    <!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

        <div class="col-lg-6">

            <div class="row gy-4">
            <div class="col-md-6">
                <div class="info-item" data-aos="fade" data-aos-delay="200">
                <i class="bi bi-geo-alt"></i>
                <h3>Adresse</h3>
                <p>{{ coordonnees[0].adresse }}</p>
                {# <p>New York, NY 535022</p> #}
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item" data-aos="fade" data-aos-delay="300" style="min-height: 220px;">
                <i class="bi bi-telephone"></i>
                <h3>Téléphone</h3>
                <p>{{ coordonnees[0].telephone }}</p>
                <p>{% if coordonnees[0].telephone2 %}{{ coordonnees[0].telephone2 }}{% endif %}</p>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item" data-aos="fade" data-aos-delay="400">
                <i class="bi bi-envelope"></i>
                <h3>Adresse mail</h3>
                <p>{{ coordonnees[0].email2 }}</p>
                <p>{% if coordonnees[0].email %}{{ coordonnees[0].email }}{% endif %}</p>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item" data-aos="fade" data-aos-delay="500">
                <i class="bi bi-clock"></i>
                <h3>Disponibilité</h3>
                <p>24h/24</p>
                <p>7 jours / 7</p>
                </div>
            </div><!-- End Info Item -->

            </div>

        </div>

        <div class="col-lg-6 contact_from">
            <form action="{{ path('app_sendmail') }}" name="contact" method="post" id="contact-form"
            class="php-email-form"
             data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-4">

                <div class="col-md-6">
                <input type="text" name="name" class="form-control" placeholder="Nom" required>
                </div>

                <div class="col-md-6 ">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>

                <div class="col-md-6">
                    <input type="text" class="form-control" name="sujet" placeholder="Sujet" required>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" name="phone" placeholder="Telephone" required>
                </div>

                <div class="col-md-12">
                <textarea class="form-control" name="message" rows="6" placeholder="Message" required></textarea>
                </div>

                <div class="col-md-12 text-center">
                <div class="loading">chargement</div>
                <div class="error-message"></div>
                <div class="sent-message">Votre message a bien été envoyé. Merci !</div>
                <button type="submit">Envoyer</button>
                </div>

            </div>
            </form>
        </div><!-- End Contact Form -->

        </div>

    </div>

    </section>
    <!-- End Contact Section -->

{% endblock %}